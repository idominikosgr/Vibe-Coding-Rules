{
  "name": "vibe-coding-rules",
  "version": "1.0.0",
  "description": "Vibe Coding Rules - Source of truth for rules used in AI assistants",
  "scripts": {
    "setup": "cd tools/project-scanner && npm install",
    "wizard": "node setup-wizard.js",
    "scan": "cd tools/project-scanner && node src/index.js",
    "sync": "node tools/sync/rule-sync.js sync",
    "sync-init": "node tools/sync/rule-sync.js init",
    "sync-status": "node tools/sync/rule-sync.js status",
    "sync-force": "node tools/sync/rule-sync.js sync --force",
    "auto-sync": "node tools/sync/auto-sync.js check",
    "auto-sync-daemon": "node tools/sync/auto-sync.js daemon",
    "auto-sync-status": "node tools/sync/auto-sync.js status",
    "install-sync-service": "node tools/sync/auto-sync.js install-service",
    "validate-rules": "node tools/validation/validate-rules.js",
    "check-duplicate-rules": "node tools/validation/check-duplicates.js",
    "preview-rule": "node tools/preview/preview-rule.js",
    "sync-manual": "node lib/sync/manual-sync.js",
    "apply-analytics-schema": "node tools/admin/apply-analytics-schema.js",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/idominikosgr/VibeCodingRules.git"
  },
  "keywords": [
    "ai",
    "rules",
    "coding",
    "standards",
    "guidelines"
  ],
  "author": "Dominikos Pritis",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/idominikosgr/VibeCodingRules/issues"
  },
  "homepage": "https://github.com/idominikosgr/VibeCodingRules#readme",
  "dependencies": {
    "acorn": "^8.15.0",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "chalk": "^5.4.1",
    "commander": "^14.0.0",
    "eslint": "^9.28.0",
    "inquirer": "^12.6.3",
    "ora": "^8.2.0",
    "readline": "^1.3.0"
  },
  "devDependencies": {
    "jest": "^30.0.0"
  },
  "packageManager": "pnpm@10.12.1"
}
